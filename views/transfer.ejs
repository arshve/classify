<% include partials/header %>
<!-- Main Content -->
<main>
  <!-- Video Stream -->
  <div class="videoContainer">
    <div class="stay">
      <div class="info">
        <span id="modelStatus">Loading Model!</span> |
        <span id="videoStatus">Loading Video!</span>
      </div>

      <hr />
      <div class="result">
        <h2 id="result">Need Data And Training!</h2>
        <h2 id="confidence"></h2>
      </div>
      <video id="videoStream">
        Authorize Need To Use WebCam
      </video>
    </div>
  </div>

  <!-- Model Creator Component -->
  <div class="modelCreator">
    <!-- Header Name -->
    <div class="title">
      <h2>Model Creator</h2>
    </div>
    <hr />
    <!-- Label Input -->
    <div>
      Learning Rate:
      <input
        type="number"
        id="lr"
        step="0.0001"
        min="0"
        onchange="lRate(this.value)"
        style="max-width: 4em; border: red;"
        required
      />
      Epoch:
      <input
        type="number"
        id="epoch"
        step="5"
        min="0"
        onchange="epoch(this.value)"
        required
      />
      Class:
      <span id="class">0</span>
    </div>

    <div class="inputLabel">
      <input id="className" type="text" placeholder="Label Name" />
      <button id="addBtn" onclick="numClass()">
        Add
      </button>
    </div>
    <div class="infoSpan">
      <span id="info">Add Label Name to Classify</span>
    </div>
    <div class="imgItems"></div>
