<% include partials/header %>
<!-- Main Content -->
<main>
  <!-- Video Stream -->
  <div class="videoContainer">
    <div class="stay">
      <div class="info">
        <span id="modelStatus">Loading Model!</span> |
        <span id="videoStatus">Loading Video!</span>
      </div>

      <hr />
      <div class="result">
        <h2 id="result">Need Data And Training!</h2>
        <h2 id="confidence"></h2>
      </div>
      <video id="videoStream">
        Authorize Need To Use WebCam
      </video>
    </div>
  </div>

  <!-- Model Creator Component -->
  <div class="modelCreator">
    <!-- Header Name -->
    <div class="title">
      <h2>Model Creator</h2>
    </div>
    <hr />
    <!-- Label Input -->
    <div>
      <div style="text-align: center; font-size: 10px; margin-top: 5px;">
        <span id="set">Change Setting Before</span>
        <span id="countdown"></span>
        <!-- <span style="color: red; font-size: 20px;">!</span>Setting currently not
            working, need to change in hard code -->
      </div>
      <div class="option">
        <div class="setting">
          Learning Rate: <br />
          <input
            type="number"
            id="lr"
            step="0.0001"
            min="0"
            onchange="lRate(this.value)"
            required
          />
        </div>
        <div class="setting">
          Batch Size: <br />
          <select name="Batch" id="batch" onchange="batchSize(this.value)">
            <option value="16">16</option>
            <option value="32">32</option>
            <option value="64">64</option>
          </select>
        </div>
        <div class="setting">
          Epoch: <br />
          <input
            type="number"
            id="epoch"
            step="5"
            min="0"
            onchange="numClass(this.value)"
            required
          />
        </div>
        <div class="setting">
          Max Class: <br />
          <input
            type="number"
            id="classMax"
            min="2"
            onchange="numClass(this.value)"
            required
          />
        </div>
      </div>

      <div class="inputLabel">
        <input id="className" type="text" placeholder="Label Name" />
        <button id="addBtn">
          Add
        </button>
      </div>
      <!-- Class:
      <span id="class"></span> -->
    </div>
    <div class="infoSpan">
      <span id="info">Add Label Name to Classify</span>
    </div>
    <div class="imgItems">
      <!-- Image Button -->
      <!-- Image Button -->
      <!-- Image Button -->
    </div>
    <div class="btnGroup">
      <button id="train">Train Model</button>
      <div class="loss">
        <span id="loss"></span> <br />
        <span id="more"></span>
      </div>
    </div>
    <div class="btnGroup">
      <button id="predict">Predict</button>
    </div>
    <div class="btnGroup">
      <button id="save">Save Model</button>
    </div>
  </div>
</main>

<script src="/public/js/transfer.js"></script>
<script src="/js/camera.js"></script>
<% include partials/footer %>
